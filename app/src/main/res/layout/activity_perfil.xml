<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Perfil">

    <ScrollView
        android:id="@+id/SCRbase"
        android:layout_width="397dp"
        android:layout_height="0dp"
        android:contentDescription="@string/Base"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/LLnavbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLrotulo">

        <LinearLayout
            android:id="@+id/LLbase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLperfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/img_pet"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_nome_usu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/img_pet"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="14sp"
                    android:text="@string/nome_usu"
                    android:textAlignment="center"
                    android:textColor="@color/brown"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/id"
                    android:textColor="@color/gray_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_visibilidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/mostrar"
                    android:textColor="@color/light_green"
                    app:chipBackgroundColor="@color/brown" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLdados"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/img_pet"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="14sp"
                    android:text="@string/sobre_dados"
                    android:textAlignment="center"
                    android:textColor="@color/brown"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/txt_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/nome_dados"
                    android:textColor="@color/gray_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_sobrenome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/sobrenome_dados"
                    android:textColor="@color/gray_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_id_dados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/id_dados"
                    android:textColor="@color/gray_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/email"
                    android:textColor="@color/gray_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_telefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="@string/telefone"
                    android:textColor="@color/gray_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/LLbase_false"
        android:layout_width="match_parent"
        android:layout_height="687dp"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/LLnavbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLrotulo"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_todos_pets"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img_pet"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/img_cadastro" />

        <TextView
            android:id="@+id/txt_familia"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/img_pet"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="14sp"
            android:text="@string/txt_familia"
            android:textAlignment="center"
            android:textColor="@color/gray_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btn_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_cadastro" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLnavbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintBounds">

        <LinearLayout
            android:id="@+id/LLicones"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/nav_bar"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/imgbtn_home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/blue_gray"
                android:contentDescription="@string/imgbtn_home"
                android:scaleType="fitXY"
                android:src="@drawable/btn_home_b"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imgbtn_video"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/blue_gray"
                android:contentDescription="@string/imgbtn_video"
                android:scaleType="fitXY"
                android:src="@drawable/icon_video_b"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imgbtn_perfil"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/blue_gray"
                android:contentDescription="@string/imgbtn_perfil"
                android:scaleType="fitXY"
                android:src="@drawable/btn_perfil_c"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLrotulo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/fundo_r_tulo"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/txt_rotulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotulo_perfil"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>